{
  "manifest_version": 3,
  "name": "Extensão - Simulação Habitacional",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.caixa.gov.br/*",
    "https://*.superleme.com.br/*",
    "https://superleme.abensoft:8443/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.js",
        "assets/*.css"
      ],
      "matches": [
        "https://*.caixa.gov.br/*",
        "https://*.superleme.com.br/*",
        "https://superleme.abensoft:8443/*"
      ]
    }
  ]
}
